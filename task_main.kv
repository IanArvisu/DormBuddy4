<TodoCard>
    elevation: 10
    md_bg_color: 1,1,1,1
    radius: [8]
    name: 'task'
    size_hint_y: .3
    MDLabel:
        text: root.title
        markup: True
        font_size: "20sp"
        size_hint_x: .8
        pos_hint: {'center_x':0.46, 'center_y':0.8}
    MDCheckbox:
        size_hint: None, None
        size: "48dp", "48dp"
        pos_hint: {'center_x':0.95, 'center_y':0.8}
        on_active: app.on_complete(*args, description)
    MDLabel:
        id: description
        text: root.description
        markup: True
        size_hint_x: .9
        pos_hint: {'center_x':0.51, 'center_y':0.4}
MDScreen:
    name: 'task_main'
    todo_list: todo_list
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDLabel:
            text: "My Tasks"
            pos_hint: {'center_x':.8, 'center_y':0.925}
            font_size: "35sp"
        MDIconButton:
            icon: "chevron-left"
            user_font_size: "40sp"
            pos_hint: {'center_y': .95}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = 'main'
        MDIconButton:
            icon: "plus"
            pos_hint: {'center_x':0.89, 'center_y':0.925}
            user_font_size: "30sp"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = 'task_add'
        ScrollView:
            do_scroll_y: True
            do_scroll_x: False
            size_hint_y: .85
            pos_hint: {'center_x': .5, 'y':0}
            bar_width: 0
            GridLayout:
                id: todo_list
                cols: 1
                height: self.minimum_height
                row_default_height: 80
                size_hint_y: None
                padding: 15, 10
                spacing: 15, 10